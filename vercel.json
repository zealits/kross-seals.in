{
    "version": 2,
    "builds": [
      { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } },
      { "src": "backend/**/*.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/backend/$1.js" },
      { "src": "/(.*)", "dest": "frontend/$1" }
    ]
  }
  